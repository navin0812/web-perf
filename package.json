{
  "name": "web-perf-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Web performance, accessibility, SEO, and security audit tool",
  "author": "Navin Joseph <navinperiyanayagam.joseph@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/navin0812/web-perf.git"
  },
  "bugs": {
    "url": "https://github.com/navin0812/web-perf/issues"
  },
  "homepage": "https://github.com/navin0812/web-perf#readme",
  "keywords": [
    "accessibility",
    "performance",
    "seo",
    "security",
    "audit",
    "wcag",
    "web-vitals",
    "github-action"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspace=packages/core && npm run build --workspace=packages/cli",
    "dev": "npm run dev --workspaces",
    "clean": "rm -rf packages/*/dist packages/*/node_modules node_modules ",
    "clean-build": "rm -rf packages/core/dist packages/cli/dist && npm run build",
    "test": "./test-sites.sh",
    "prepublishOnly": "npm run build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "semantic-release": "^24.2.0",
    "semantic-release-commit-filter": "^1.0.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
